<section role="main" id='bg' class='bg'>
  <!-- dont wrap the ui b/c it will hide content. TODO: use z-index instead? -->
</section>

{{weather-searchbar transitionToLocation="transitionToLocationHandler"}}

<div class="weather-panel bg">
  <div class="small-12 columns">
    <h1>{{name}}</h1>
    <a {{action 'saveLocation' id}}>Save Location</a>
  </div>
  <div class="attribution">
    photo by: {{photographer-link photographer}}
  </div>
</div>

<div class="weather-stript">
  {{weather-current location=this}}
  <div class="forcast">
    {{weather-forecast forecast=forecast}}
  </div>
</div>
