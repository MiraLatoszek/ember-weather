<section role="main" id='bg' class='bg'></section>
<div class="weather-panel bg">
  <div class="small-12 columns">
    <h1>{{location.title}}</h1>
    <a {{action 'saveLocation' location}}>Save Location</a>
  </div>
</div>
<div class="weather-stript">
  <div class="current-details">
    <div class="temp-date">
      <div class="temp">
        {{location.weather.tempF}}
        &deg;
      </div>
      <div class="display-date">
        {{location.displayDate}}
      </div>
    </div>
    <div class="icon-wind">
      <div class="large-icon">
        {{icon-name location.weather.icon}}
      </div>
      <div class="text-center">
        <span {{bind-attr class="location.windDirection"}}></span>{{location.windDirection}}
        |
        {{location.weather.wind_gust_mph}}mph
      </div>
    </div>
  </div>

  {{weather-forecast days=location.eightDays}}
</div>


